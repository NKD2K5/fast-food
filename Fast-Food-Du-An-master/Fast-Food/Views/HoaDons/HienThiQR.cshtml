@model Fast_Food.Models.HoaDon

@{
    ViewData["Title"] = "Thanh toán đơn hàng";
}

<h2 class="mb-4 text-center">Thanh toán đơn hàng #@Model.MaHoaDon</h2>

<div class="text-center">
    <p>Vui lòng quét mã QR để thanh toán</p>
    <img src="~/images/QR_ThanhToan.png" alt="QR Code Thanh Toán" class="img-fluid" />

    @if (Model.TrangThaiDonHang != "Đã thanh toán") 
    {
        <form asp-action="ThanhToan" asp-controller="HoaDons" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.MaHoaDon" />
            <button type="submit" class="btn btn-primary mt-3">
                ✅ Xác nhận Đã Thanh Toán
            </button>
        </form>
    }
    else
    {
        <p class="text-success mt-3">Đơn hàng đã được thanh toán thành công!</p> <!-- Thông báo khi đã thanh toán -->
    }

    <a asp-action="Index" class="btn btn-secondary mt-2">Quay lại danh sách hóa đơn</a>
</div>
