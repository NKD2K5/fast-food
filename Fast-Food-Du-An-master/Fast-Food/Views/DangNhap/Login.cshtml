@{
    ViewData["Title"] = "Đăng Nhập";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg mt-5 border-0 bg-glass">
                <!-- Header -->
                <div class="card-header text-center" style="background-color: #FF4500; color: white;">
                    <h2>Đăng nhập</h2>
                </div>

                <div class="card-body">
                    <!-- Hiển thị lỗi nếu có -->
                    @if (!string.IsNullOrEmpty(ViewBag.loi as string))
                    {
                        <div class="alert alert-danger text-center">
                            @ViewBag.loi
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Nhập tài khoản -->
                        <div class="mb-3">
                            <label for="tk" class="form-label fw-bold">Tên Tài Khoản</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white">
                                    <ion-icon name="person-circle-outline" class="icon-large"></ion-icon>
                                </span>
                                <input type="text" id="tk" name="tk" required class="form-control" placeholder="Tên tài khoản" />
                            </div>
                        </div>

                        <!-- Nhập mật khẩu -->
                        <div class="mb-3">
                            <label for="Password" class="form-label fw-bold">Mật Khẩu</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white">
                                    <ion-icon name="lock-closed-outline" class="icon-large"></ion-icon>
                                </span>
                                <input type="password" id="Password" name="mk" required class="form-control" placeholder="Mật khẩu" />
                            </div>
                        </div>

                        <!-- Hiển thị mật khẩu -->
                        <div class="form-check d-flex align-items-center">
                            <input type="checkbox" id="togglePassword" class="form-check-input me-2">
                            <label for="togglePassword" class="form-check-label">Hiển thị mật khẩu</label>
                        </div>

                        <!-- Link đăng ký -->
                        <div class="mt-3 text-center">
                            <a href="/DangNhap/DangKy" class="text-decoration-none fw-bold" style="color: #FF4500;">Chưa có tài khoản? Đăng ký ngay</a>
                        </div>

                        <!-- Nút đăng nhập -->
                        <div class="d-grid mt-3">
                            <button class="btn fw-bold text-white" type="submit" style="background-color: #FF4500;">Đăng nhập</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    body {
        background-image: url('/img/monan/z6368182400617_0f806ea61bdc71b6ac484c67339bc4e3.jpg'); /* Thay bằng đường dẫn ảnh */
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
        background-blend-mode: normal;
    }

    /* Điều chỉnh nền form để không bị che mất nội dung */
    .bg-glass {
        background: rgba(255, 255, 255, 0.5); /* Nền trắng trong suốt hơn */
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Đổ bóng giúp nổi bật */
    }

    .icon-large {
        font-size: 1.5rem;
        color: #FF4500;
    }
</style>

<!-- Script -->
@section Scripts {
    <script>
        document.getElementById('togglePassword').addEventListener('change', function () {
            const passwordField = document.getElementById('Password');
            passwordField.type = this.checked ? 'text' : 'password';
        });
    </script>
}
